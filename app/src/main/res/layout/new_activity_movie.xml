<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movie_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_main_bg_1">

    <TextView
        android:id="@+id/alert_popup"
        android:layout_width="512dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="30dp"
        android:background="@drawable/alert_yellow"
        android:gravity="center"
        android:paddingRight="0dp"
        android:paddingTop="1dp"
        android:text="TextView"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/rightbar"
            style="@style/right_bar_style">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:src="@drawable/new_ico_datetime" />

            <lab.nicc.kioskyoungcheon.DigitalClock
                android:id="@+id/digitalClock1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="DigitalClock"
                android:textColor="#ffffff"
                android:textSize="32dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout> <!-- 시계 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/title_round"
        android:gravity="center_horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="0dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="0dp">

            <ImageView
                android:id="@+id/gj_logo"
                style="@style/logo_img_style" />

            <ImageView
                android:id="@+id/gj_line"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/logo_line" />

            <TextView
                android:id="@+id/teamLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:fontFamily="@font/nanummyeongjobold"
                android:gravity="center_vertical"
                android:text="Team name"
                android:textColor="#ffffff"
                android:textSize="50sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/title_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/new_btn_home" />
    </LinearLayout> <!-- 타이틀 -->

    <RelativeLayout
        android:id="@+id/inner_bar"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/new_mnu_bg">

        <TextView
            android:id="@+id/notice_bar"
            android:layout_width="750dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="34dp"
            android:background="@drawable/notice_round"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Notice Title"
            android:textColor="@android:color/background_light"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/bottom_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/new_mnu_1_out" />

            <ImageView
                style = "@style/border_style"
                android:src="@drawable/new_mnu_line" />

            <ImageView
                android:id="@+id/bottom_past"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/new_mnu_2_out" />

            <ImageView
                android:id="@+id/bottom_organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/new_mnu_3_out" />

            <ImageView
                style = "@style/border_style"
                android:src="@drawable/new_mnu_line" />

            <ImageView
                android:id="@+id/bottom_building"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/new_mnu_4_out" />

            <ImageView
                style = "@style/border_style"
                android:src="@drawable/new_mnu_line" />

            <ImageView
                android:id="@+id/bottom_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/new_mnu_5_over" />

            <ImageView
                style = "@style/border_style"
                android:src="@drawable/new_mnu_line" />

            <ImageView
                android:id="@+id/bottom_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/new_mnu_6_out" />

            <ImageView
                style = "@style/border_style"
                android:src="@drawable/new_mnu_line" />

            <ImageView
                android:id="@+id/bottom_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/new_mnu_7_out" />

            <ImageView
                style = "@style/border_style"
                android:src="@drawable/new_mnu_line" />

            <ImageView
                android:id="@+id/bottom_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                app:srcCompat="@drawable/new_mnu_8_out" />
        </LinearLayout>
    </RelativeLayout> <!-- 하단 바 -->

    <RelativeLayout
        android:id="@+id/notice_main"
        android:layout_width="1840dp"
        android:layout_height="720dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="215dp"
        android:background="@drawable/contents_box_bg"
        android:visibility="visible">

        <TextView
            android:id="@+id/notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="Notice &amp; News"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/listview_wrapper"
            android:layout_width="1840dp"
            android:layout_height="720dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp">

            <ListView
                android:id="@+id/notice_listview"
                android:layout_width="1840dp"
                android:layout_height="720dp"
                android:backgroundTint="#B2000000"
                android:divider="#00000000"
                android:scrollbarAlwaysDrawVerticalTrack="true" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="1840dp"
            android:layout_height="720dp"
            android:layout_alignParentBottom="false"
            android:layout_alignStart="@+id/listview_wrapper"
            android:layout_alignTop="@id/listview_wrapper"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:id="@+id/popup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">

                <com.google.android.exoplayer2.ui.PlayerView
                    android:id="@+id/exoPlayerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:use_controller="false" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/popup_close"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/notice"
            android:layout_marginRight="750dp"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@id/notice"
            android:gravity="center_horizontal"
            android:rotation="180"
            android:visibility="invisible">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="34dp"
                android:src="@drawable/ico_arrow_old" />

        </LinearLayout>

        <!--<FrameLayout
            style="@style/shine_style"
            android:id="@+id/shine"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>-->

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/dark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#66000000"
        android:visibility="gone">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/scaledDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:background="#aa000000"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/popupImageScaled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:visibility="invisible" />
</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin">

  <FrameLayout
      android:id="@+id/leader_container1"
      android:layout_width="420dp"
      android:layout_height="wrap_content" />

  <FrameLayout
      android:id="@+id/team1_container1"
      android:layout_width="420dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/leader_container1" />

  <FrameLayout
      android:id="@+id/team1_container2"
      android:layout_width="420dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/team1_container1" />

  <FrameLayout
      android:id="@+id/team1_container3"
      android:layout_width="420dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/team1_container2" />

  <FrameLayout
      android:id="@+id/team1_container4"
      android:layout_width="420dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/team1_container3" />

</RelativeLayout>

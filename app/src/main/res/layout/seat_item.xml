<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/seat_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="0dp">

    <ImageView
        android:id="@+id/topImg"
        android:layout_width="152dp"
        android:layout_height="87dp"
        android:layout_alignStart="@+id/top"
        android:layout_alignTop="@+id/top"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/seat_member_bg" />

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/team_pic"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/no_img_b" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/team_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/isWorking_layout"
                    android:layout_marginLeft="5dp"
                    android:text="name"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/team_duty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/team_name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="duty"
                    android:textColor="#555555"
                    android:textSize="12dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/seat_text"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/team"
        android:foregroundGravity="center"
        android:gravity="center"
        android:paddingTop="4dp"
        android:text="좌석 배치도가 설정되지 않았습니다."
        android:textColor="#eeeeee"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="visible" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1475dp"
    android:layout_height="60dp"
    android:background="@drawable/item_round"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/search_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:maxLines="1"
        android:text="이름"
        android:textColor="#5e5e5e"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <FrameLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/search_title_border"/>

    <TextView
        android:id="@+id/search_work"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="직책"
        android:textColor="#5e5e5e"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <FrameLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/search_title_border"/>

    <TextView
        android:id="@+id/search_dept"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="부서"
        android:textColor="#5e5e5e"
        android:textSize="22dp"
        android:textAlignment="center"/>

    <FrameLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/search_title_border"/>

    <TextView
        android:id="@+id/search_team"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="팀"
        android:textColor="#5e5e5e"
        android:textSize="22dp"
        android:textAlignment="center"/>

    <FrameLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/search_title_border"/>

    <TextView
        android:id="@+id/search_mission"
        android:layout_width="530dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="35dp"
        android:text="업무"
        android:textColor="#5e5e5e"
        android:textSize="22dp" />

    <FrameLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/search_title_border"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/building_button"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_buseo_1"
            android:visibility="gone" />

        <Button
            android:id="@+id/org_button"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_buseo_2" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seat_item_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="0dp">

    <FrameLayout
        android:layout_width="161dp"
        android:layout_height="97dp"
        android:layout_marginLeft="6dp">

    </FrameLayout>

    <TextView
        android:id="@+id/nothing_has"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좌석배치도가 설정되지 않았습니다."
        android:textColor="#FF000000"
        android:textSize="83sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/topImg_view"
        android:layout_width="175dp"
        android:layout_height="113dp"
        android:layout_alignStart="@+id/top"
        android:layout_alignTop="@+id/top"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/seat_member_bg" />

    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="150dp"
        android:layout_height="91dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/team_pic_view"
                android:layout_width="58dp"
                android:layout_height="85dp"
                android:layout_marginLeft="4dp"
                app:srcCompat="@drawable/no_img_b" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp">

                <TextView
                    android:id="@+id/team_name_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/isWorking_layout"
                    android:layout_marginLeft="3dp"
                    android:text="name"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/team_duty_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/team_name_view"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:text="duty"
                    android:textColor="#555555" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/seat_text_view"
        android:layout_width="224dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:background="@drawable/team"
        android:foregroundGravity="center"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="가나다"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:textStyle="bold"
        android:visibility="visible" />
</RelativeLayout>
